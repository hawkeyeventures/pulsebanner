{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "commonjs",
        "lib": [
            "es2017",
            "dom"
        ],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "@app/*": [
                "apps/next/*"
            ],
            "@pulsebanner/auth": [
                "libs/auth/src/index.ts"
            ],
            "@pulsebanner/react/color": [
                "libs/react/color/src/index.ts"
            ],
            "@pulsebanner/remotion/components": [
                "libs/remotion/components/src/index.ts"
            ],
            "@pulsebanner/remotion/forms": [
                "libs/remotion/forms/src/index.ts"
            ],
            "@pulsebanner/remotion/player": [
                "libs/remotion/player/src/index.ts"
            ],
            "@pulsebanner/remotion/preview": [
                "libs/remotion/preview/src/index.ts"
            ],
            "@pulsebanner/remotion/templates": [
                "libs/remotion/templates/src/index.ts"
            ],
            "@pulsebanner/templates": [
                "libs/templates/src/index.ts"
            ],
            "@pulsebanner/util": [
                "libs/util/src/index.ts"
            ],
            "@pulsebanner/twitch": [
                "libs/twitch/src/index.ts"
            ]
        },
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "node_modules",
        "tmp"
    ]
}
