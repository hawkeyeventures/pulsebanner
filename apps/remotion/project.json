{
    "root": "apps/remotion",
    "sourceRoot": "apps/remotion/src",
    "projectType": "application",
    "targets": {
        "build": {
            "executor": "@nrwl/node:build",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/apps/remotion",
                "main": "apps/remotion/src/main.ts",
                "tsConfig": "apps/remotion/tsconfig.app.json",
                "assets": ["apps/remotion/src/assets"]
            },
            "configurations": {
                "production": {
                    "optimization": true,
                    "extractLicenses": true,
                    "inspect": false,
                    "fileReplacements": [
                        {
                            "replace": "apps/remotion/src/environments/environment.ts",
                            "with": "apps/remotion/src/environments/environment.prod.ts"
                        }
                    ]
                }
            }
        },
        "serve": {
            "executor": "@nrwl/node:execute",
            "options": {
                "buildTarget": "remotion:build"
            }
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["apps/remotion/**/*.ts"]
            }
        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "outputs": ["coverage/apps/remotion"],
            "options": {
                "jestConfig": "apps/remotion/jest.config.js",
                "passWithNoTests": true
            }
        }
    },
    "tags": []
}
